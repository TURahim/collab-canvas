{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "rooms": {
      "$roomId": {
        ".write": "auth != null",
        "presence": {
          ".read": "auth != null",
          "$uid": {
            ".write": "$uid === auth.uid",
            "name": {
              ".validate": "newData.isString()"
            },
            "color": {
              ".validate": "newData.isString()"
            },
            "online": {
              ".validate": "newData.isBoolean()"
            },
            "lastSeen": {
              ".validate": "newData.isNumber()"
            },
            "cursor": {
              ".validate": "newData.hasChildren(['x', 'y'])",
              "x": {
                ".validate": "newData.isNumber()"
              },
              "y": {
                ".validate": "newData.isNumber()"
              },
              "lastSeen": {
                ".validate": "newData.isNumber()"
              }
            }
          }
        },
        "cursors": {
          ".read": "auth != null",
          "$uid": {
            ".write": "$uid === auth.uid"
          }
        },
        "access": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "bans": {
          ".read": "auth != null",
          "$uid": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    }
  }
}
