{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "rooms": {
      "$roomId": {
        "presence": {
          ".read": "auth != null",
          "$uid": {
            ".write": "$uid === auth.uid"
          }
        },
        "cursors": {
          ".read": "auth != null",
          "$uid": {
            ".write": "$uid === auth.uid"
          }
        },
        "access": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "bans": {
          ".read": "auth != null",
          "$uid": {
            ".write": "auth != null"
          }
        }
      }
    }
  }
}
